<?xml version='1.0' encoding='utf-8'?>
<widget id="com.infonetapps.sgparents" version="1.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>SG Parents</name>
    <description>
        For parents in Singapore - Find kids stuff near you
    </description>
    <author email="kapil@infonetapps.com" href="http://www.infonetapps.com">
        Infonet Apps
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="resources/icon.png"/>
</widget>
